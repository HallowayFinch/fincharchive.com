---
layout: null
permalink: /sitemap.xml
published: true
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% raw %}{%- assign space = "  " -%}{% endraw %}
  <!-- Home -->
  <url>
    <loc>{{ "/" | absolute_url }}</loc>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
  </url>

  <!-- Pages -->
  {%- for p in site.pages -%}
    {%- assign u = p.url -%}
    {%- unless p.sitemap == false
          or u contains ".xml"
          or u contains "/feed"
          or u == "/feed.json"
          or u contains "/assets/"
          or u == "/404.html"
          or u == "/robots.txt" -%}
{{ space }}<url>
{{ space }}  <loc>{{ u | absolute_url }}</loc>
      {%- if p.last_modified_at or p.date -%}
{{ space }}  <lastmod>{{ p.last_modified_at | default: p.date | date_to_xmlschema }}</lastmod>
      {%- endif -%}
{{ space }}</url>
    {%- endunless -%}
  {%- endfor -%}
  <!-- /Pages -->

  <!-- Logs -->
  {%- for item in site.logs -%}
{{ space }}<url>
{{ space }}  <loc>{{ item.url | absolute_url }}</loc>
{{ space }}  <lastmod>{{ item.last_modified_at | default: item.date | date_to_xmlschema }}</lastmod>
{{ space }}  <changefreq>monthly</changefreq>
{{ space }}  <priority>0.6</priority>
{{ space }}</url>
  {%- endfor -%}
  <!-- /Logs -->

  <!-- Field Notes -->
  {%- for item in site["field-notes"] -%}
{{ space }}<url>
{{ space }}  <loc>{{ item.url | absolute_url }}</loc>
{{ space }}  <lastmod>{{ item.last_modified_at | default: item.date | date_to_xmlschema }}</lastmod>
{{ space }}  <changefreq>monthly</changefreq>
{{ space }}  <priority>0.5</priority>
{{ space }}</url>
  {%- endfor -%}
  <!-- /Field Notes -->

  <!-- Optional: classic blog posts -->
  {%- for post in site.posts -%}
{{ space }}<url>
{{ space }}  <loc>{{ post.url | absolute_url }}</loc>
{{ space }}  <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
{{ space }}  <changefreq>monthly</changefreq>
{{ space }}</url>
  {%- endfor -%}
  <!-- /Optional posts -->
</urlset>
