---
layout: null
permalink: /sitemap.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Home -->
  <url>
    <loc>{{ "/" | absolute_url }}</loc>
    <changefreq>weekly</changefreq>
    <priority>0.8</priority>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
  </url>

  <!-- Pages (excludes feeds, assets, 404, robots, and anything with sitemap:false) -->
  {%- for p in site.pages -%}
    {%- assign u = p.url -%}
    {%- unless p.sitemap == false
          or u contains ".xml"
          or u contains "/feed"
          or u == "/feed.json"
          or u contains "/assets/"
          or u == "/404.html"
          or u == "/robots.txt" -%}
      <url>
        <loc>{{ u | absolute_url }}</loc>
        {%- if p.last_modified_at or p.date -%}
          <lastmod>{{ p.last_modified_at | default: p.date | date_to_xmlschema }}</lastmod>
        {%- endif -%}
        {%- if u == "/about/" -%}<changefreq>yearly</changefreq>{%- endif -%}
      </url>
    {%- endunless -%}
  {%- endfor -%}
  <!-- /Pages -->

  <!-- Logs -->
  {%- if site.logs -%}
    {%- for item in site.logs -%}
      {%- unless item.sitemap == false -%}
      <url>
        <loc>{{ item.url | absolute_url }}</loc>
        <lastmod>{{ item.last_modified_at | default: item.date | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.6</priority>
      </url>
      {%- endunless -%}
    {%- endfor -%}
  {%- endif -%}
  <!-- /Logs -->

  <!-- Field Notes -->
  {%- assign fn = site["field-notes"] -%}
  {%- if fn -%}
    {%- for item in fn -%}
      {%- unless item.sitemap == false -%}
      <url>
        <loc>{{ item.url | absolute_url }}</loc>
        <lastmod>{{ item.last_modified_at | default: item.date | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
        <priority>0.5</priority>
      </url>
      {%- endunless -%}
    {%- endfor -%}
  {%- endif -%}
  <!-- /Field Notes -->

  <!-- Optional: classic blog posts if ever used -->
  {%- if site.posts -%}
    {%- for post in site.posts -%}
      {%- unless post.sitemap == false -%}
      <url>
        <loc>{{ post.url | absolute_url }}</loc>
        <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
        <changefreq>monthly</changefreq>
      </url>
      {%- endunless -%}
    {%- endfor -%}
  {%- endif -%}
  <!-- /Optional posts -->
</urlset>
