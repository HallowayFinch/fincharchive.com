---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
<channel>
  <title>{{ site.title }}</title>
  <link>{{ site.url }}{{ site.baseurl }}</link>
  <description>{{ site.description }}</description>

  {%- assign logs = site.logs | default: empty -%}
  {%- assign notes = site["field-notes"] | default: empty -%}
  {%- assign all = logs | concat: notes -%}
  {%- assign items = all | sort: "date" | reverse -%}

  {%- for item in items limit: 30 -%}
    <item>
      <title>{{ item.title | xml_escape }}</title>
      <link>{{ item.url | absolute_url }}</link>
      <pubDate>{{ item.date | date_to_rfc822 }}</pubDate>
      <guid>{{ item.url | absolute_url }}</guid>
      <description><![CDATA[{{ item.content }}]]></description>
    </item>
  {%- endfor -%}
</channel>
</rss>